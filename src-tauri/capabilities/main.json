{
  "$schema": "./schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "window:allow-set-fullscreen",
    "app:default",
    "app:allow-version",
    "process:allow-exit",
    "resources:default",
    "menu:default",
    "tray:default",
    "window:allow-set-title",
    "log:allow-log",
    "log:default",
    "updater:allow-check",
    "updater:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save"
  ]
}